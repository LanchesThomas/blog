{% extends 'frontoffice/base.html.twig' %}

{% block title %}Ajouter un nouvel article{% endblock %}


{% block header %}
<section class="mt-14 mx-auto bg-[url('assets/banner.avif')] h-96 relative p-4">
    <div class="absolute top-0 left-0 w-full h-full bg-black opacity-50"></div>  
    <div class="container mx-auto flex justify-center items-center flex-col h-full relative text-center ">
        <h1 class="font-bold text-white uppercase" style="font-size: clamp(1.5rem, 1rem + 2.5vw, 3rem);">Ajouter un nouvel article</h1>
    </div>
</section>
{% endblock %}
{% block main %}
{% include 'frontoffice/flash.html.twig' %}
<div class="container mx-auto flex my-16 gap-4">
    <form method="post" class="w-full mx-4 flex flex-col gap-8">
        <div class="flex flex-col gap-4">
            <label for="title" class="text-xl font-bold">Titre de l'article</label>
            <input
                type="text"
                id="title"
                name="title"
                class="rounded-md min-h-8 text-black p-2 border"
                required
                >
        </div>
        <div class="flex flex-col gap-4">
            <label for="chapo" class="text-xl font-bold">Chap√¥ de l'article</label>
            <textarea
                id="chapo"
                name="chapo"
                class="rounded-md min-h-16 text-black p-2 border"
                required
                ></textarea>
        </div>
        <div class="flex flex-col gap-4">
            <label for="content" class="text-xl font-bold">Contenu de l'article</label>
            <textarea
                id="content"
                name="content"
                class="rounded-md min-h-32 text-black p-2 border"
                required
                ></textarea>
        </div>
        <div class="flex flex-col gap-4">
            <p for="content" class="text-xl font-bold">Auteur de l'article</p>
            <p class="p-2 rounded-md bg-cyan-600 self-start text-white"> {{user['pseudo']}} </p>
        </div>
        <input 
            class="p-4 bg-cyan-800 rounded-md cursor-pointer text-white" 
            type="submit">
        </input>
    </form>
    
</div>
{% endblock %}